<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="center">Edit Comment for <%= animal.name %></h1>
		<div class="form-center">
		<form action="/animals/<%= animal._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
				<textarea type="text" class="form-control" rows="5" name="comment[text]" required><%=comment.text%></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/animals/<%= animal._id%>">Go Back</a>
		</div>	
	</div>
</div>

<% include ../partials/footer %>