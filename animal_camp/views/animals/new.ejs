<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="center" >Capture New Animal</h1>
		<div class="form-center">
			<form action="/animals" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="animal[name]" placeholder="Name Animal">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="animal[description]" placeholder="Description">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="animal[image]" placeholder="Image URL">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-success btn-block">Submit</button>
				</div>
			</form>
			<a href="/animals">Go Back</a>
		</div>	
	</div>
</div>

<% include ../partials/footer %>