<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="center" >Edit Animal Info</h1>
		<div class="form-center">
			<form action="/animals/<%= animal._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="animal[name]" value="<%=animal.name%>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="animal[description]" value="<%=animal.description%>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="animal[image]" value="<%=animal.image%>" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-success btn-block">Submit</button>
				</div>
			</form>
		</div>	
	</div>
</div>

<% include ../partials/footer %>