<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="center">Add New Comment for <%= animal.name %></h1>
		<div class="form-center">
			<form action="/animals/<%= animal._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="Description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/animals/<%= animal._id%>">Go Back</a>
		</div>	
	</div>
</div>

<% include ../partials/footer %>